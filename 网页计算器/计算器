<html>
<head>
	<style>
        .result{
            width: 100%;
            height: 30px;
            border: solid 1px #ffffff;
            font-weight: bold;
            color: darkgreen;
            text-align: left;
            font-family: 黑体;
        }
        .mybutton{
            cursor: pointer;
            width: 40px;
            height: 30px;
            border: solid 1px #ffffff;
            background: #007fff;
            color: #ffffff;
            text-align: center;
            font-weight: bold;
            font-family: 黑体;
        }
        #calc{
            margin: auto;
            margin-top: 30px;
            border: solid 4px #007fff;
            border-spacing: 0px;
        }
    </style>
</head>
	<script>
		var str1="";
		function mybuttonclick(){

			ret=event.srcElement.innerText;
			if(ret.length>1){
				return;
				}
			switch(ret){
				case"+":
				case"-":
				case"*":
				case"/":
					
						str1+=ret;
						result.innerText=str1;
					
					break;
				case"=":
					ret=eval(str1);
					result.innerText=ret;
					str1="";
					break;
				case"c":
					str1="";
					result.innerText="0";
					break;
				default:
					str1+=ret;
					result.innerText=str1;
					break;
				}
}
	</script>

	<table id="calc" onclick="mybuttonclick()">
	 <tr>
		<td class="result" id="result" colspan="5">0</td>
	</tr>
	<tr>
		<td class="mybutton">1</td>
		<td class="mybutton">2</td>
		<td class="mybutton">3</td>
		<td class="mybutton">+</td>
		<td class="mybutton">c</td>
	
	<tr>
		<td class="mybutton">4</td>
		<td class="mybutton">5</td>
		<td class="mybutton">6</td>
		<td class="mybutton">-</td>
		<td rowspan="3" class="mybutton" onclick="enter()">=</td>
	
	<tr>
		<td class="mybutton">7</td>
		<td class="mybutton">8</td>
		<td class="mybutton">9</td>
		<td class="mybutton">*</td>
	
	<tr>
		<td class="mybutton">+/-</td>
		<td class="mybutton">0</td>
		<td class="mybutton">.</td>
		<td class="mybutton">/</td>
	
